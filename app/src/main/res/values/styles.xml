<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BottomNavigationViewText" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="DialogAnimProperties">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimaryDark">@color/core_colors_dark_gray</item>
        <item name="colorAccent">@color/core_colors_fire_orange</item>
        <item name="colorPrimary">@color/core_colors_platinum_white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/core_colors_platinum_white</item>
        <item name="actionMenuTextColor">@color/core_colors_fire_orange</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>